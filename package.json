{
  "name": "dynamodb-toolbox",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node index.ts",
    "eslint": "eslint \"src/**/*.{ts,js}\"",
    "test": "jest --watchAll",
    "test-ci": "jest --ci --coverage",
    "prettier": "prettier --write \"src/**/*.{ts,js}\""
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 200
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "./test/test-setup.ts"
    ],
    "testTimeout": 10000,
    "coverageReporters": [
      "text",
      "html",
      "cobertura"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 10,
        "lines": 10,
        "statements": -100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn test-ci"
    }
  },
  "dependencies": {
    "aws-sdk": "^2.709.0",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "fs-jetpack": "^2.4.0",
    "inquirer": "^7.1.0",
    "lodash": "^4.17.19",
    "strip-comments": "^2.0.1",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.155",
    "@types/node": "^14.0.13",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "nock": "^12.0.3",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
